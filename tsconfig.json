{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["es2020", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./target/ts",
        "resolveJsonModule": true,
        "skipLibCheck": false,
        "sourceMap": true,
        "strict": true,
        "target": "es2020"
    },
    "include": ["src/**/*.ts*", "next-env.d.ts", "target/codegen/*.ts*"],
    "exclude": ["node_modules"]
}
